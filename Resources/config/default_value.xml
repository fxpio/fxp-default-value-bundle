<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_default_value.extension.class">Sonatra\Component\DefaultValue\Extension\DependencyInjection\DependencyInjectionExtension</parameter>
        <parameter key="sonatra_default_value.factory.class">Sonatra\Component\DefaultValue\ObjectFactory</parameter>
        <parameter key="sonatra_default_value.registry.class">Sonatra\Component\DefaultValue\ObjectRegistry</parameter>
        <parameter key="sonatra_default_value.resolved_type_factory.class">Sonatra\Component\DefaultValue\ResolvedObjectTypeFactory</parameter>
    </parameters>

    <services>
        <!-- DependencyInjectionExtension -->
        <service id="sonatra_default_value.extension" class="%sonatra_default_value.extension.class%" public="false">
            <property name="container" type="service" id="service_container" />
            <argument type="collection" />
            <argument type="collection" />
        </service>

        <!-- ObjectFactory -->
        <service id="sonatra_default_value.factory" class="%sonatra_default_value.factory.class%">
            <argument type="service" id="sonatra_default_value.registry" />
            <argument type="service" id="sonatra_default_value.resolved_type_factory" />
        </service>

        <!-- BlockRegistry -->
        <service id="sonatra_default_value.registry" class="%sonatra_default_value.registry.class%">
            <argument type="collection">
                <!--
                We don't need to be able to add more extensions.
                 * more types can be registered with the sonatra_default_value.type tag
                 * more type extensions can be registered with the sonatra_default_value.type_extension tag
                -->
                <argument type="service" id="sonatra_default_value.extension" />
            </argument>
            <argument type="service" id="sonatra_default_value.resolved_type_factory" />
        </service>

        <!-- ResolvedBlockTypeFactory -->
        <service id="sonatra_default_value.resolved_type_factory" class="%sonatra_default_value.resolved_type_factory.class%" />

        <!-- CoreExtension -->
        <service id="sonatra_default_value.type.default" class="Sonatra\Component\DefaultValue\Extension\Core\Type\DefaultType">
            <tag name="sonatra_default_value.type" class="default" />
        </service>
    </services>
</container>
